package javaapplication1;

/**
 *
 * @author Aliya
 */
public class Vector {
    public float i = 0.f; //компонента i вектора
    public float j = 0.f; //компонента j вектора
    /**
     * коструктор
     */
    
    public Vector (float i, float j)
    {
        this.i = i;
        this.j = j;
    }
    /**
     * Суммирование векторов
     */
   public Vector plus (Vector x)
   {
       return new Vector (this.i + x.i, this.j + x.j);
   }
    
}


