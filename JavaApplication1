package javaapplication1;

/**
 *
 * @author Aliya
 */
public class JavaApplication1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        test_plus();
        // TODO code application logic here
    }
    public static void test_plus() { // создание проги
        boolean plusIsOk = true; // логическая переменная
        for (int j = -50; j<=50; j++ ) {
            for (int i = -50; i<=50; i++){
                Vector v1= new Vector (j,i); // координаты вектора
                Vector v2= new Vector (-1*j, -1*i); // обратные координаты вектора
                Vector v3= v1.plus(v2); // 3 вектор: сложение двух векторов
                if ((v3.j !=0) || (v3.i !=0)) {
                    plusIsOk = false; // должен быть равен 0, если нет, то прога плохая
                    
                }
            }
        }
        if (plusIsOk) {
            System.out.println("Плюс норм"); // вывод результата
        }
        else {
            System.out.println("Плюс не норм"); // 
        }
    }
}




